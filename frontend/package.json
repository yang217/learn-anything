  "main": "index.js",
  "repository": "learn-anything/learn-anything",
  "keywords": [
    "BuckleScript",
    "ReasonML"
  ],
  "scripts": {
    "reason": "bsb -make-world",
    "js": "npm run reason && webpack",
    "css": "postcss src/styles/Index.css --use postcss-import autoprefixer -o build/style.css",
    "html": "mkdir -p build/app && cp src/Index.html build/app/index.html",
    "build": "run-p js css html",
    "start": "serve -p 3000",
    "dev": "nodemon --exec run-s build start --watch src/ --ext re,css,html,json",
    "clean": "bsb -clean-world && rm -r build"
  },
  "dependencies": {
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "reason-react": "^0.5.3"
  },
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "bs-platform": "^4.0.7",
    "nodemon": "^1.18.5",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.1",
    "postcss-import": "^12.0.1",
    "serve": "^10.0.2",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  }
}
